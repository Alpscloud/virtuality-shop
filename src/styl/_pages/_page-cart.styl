.cart
	&-content
		flex 1 0 320px
		
		.cart-order-information
			display none
		
	&-aside
		width 395px
		margin-left 45px
		flex none
		
		.btn
			padding-top 
		
	&-order
		&-information
			.btn-toggle
				display none
			&__btns
				margin-bottom 15px
				.btn
					margin-bottom 15px
					&:last-child
						margin-bottom 0
			&__total
				display flex
				justify-content space-between
				
			&__price
				color $accent-color
				display inline-block
				font 20px $Bold
				
			&__list
				background-color $basic-white-color
				box-shadow 7px 6px 13px -10px rgba(28, 26, 26, 0.15), 8px 8px 30px -6px rgba(28, 26, 26, 0.1)
				padding 35px
				> .block-title
					padding-bottom 30px
					margin-bottom 30px
					border-bottom 1px solid $border-color
			&__ul
				padding-bottom 30px
				margin-bottom 30px
				border-bottom 1px solid $border-color
			ul
				
				li
					display flex
					flex-wrap nowrap
					align-items flex-end
					justify-content space-between
					margin-bottom 17px
					
					&:last-child
						margin-bottom 0
					&:first-child
						font-weight 700
						font-size 17px
					span
						height 1px
						flex 1
						margin-left 4px
						margin-right 4px
						border-bottom 1px dotted $border-color
					b, strong, span
						font-family $Reg
						font-weight 700
							

							

.cart-products
	padding-bottom 70px
	border-bottom 1px solid $border-color
	margin-bottom 70px
	&__header
		margin-bottom 15px
		margin-left -10px
		margin-right -10px
		padding-right 50px
		
.cart-product
	margin-bottom 20px
	padding 15px 50px 15px 15px
	position relative
	.btn-close
		width 12px
		height 12px
		position absolute
		right 25px
		top 60px
		svg
			width 100%
			height 100%
	.row
		margin-left -10px
		margin-right -10px
	&__thumbnail
		flex none
		flex-col-center()
		padding 5px
		width 180px
		height 130px
		margin-right 25px
		img
			@extends .content-img
	&-information
		display flex
		flex-wrap nowrap
		align-items flex-start
		max-width 560px
		.product-card__title
			margin-bottom 5px
		.product-articul
			margin-bottom 10px
			margin-top 0
			
	.product-prices
		justify-content center
		font-size 15px
		span
			font-size inherit
			
	.cart-product__col:nth-child(2)
		padding-top 30px
	.cart-product__col:nth-child(3)
		padding-top 40px
		
	.product-quantity
		margin 0 auto
		
	
	&__col
		padding-left 10px
		padding-right 10px
	
		&:nth-child(1)
			flex 1
			
		&:nth-child(2)
			width 100%
			max-width 200px
			
		&:nth-child(3)
			width 100%
			max-width 230px
			
		&:nth-child(4)
			width 100%
	&:last-child
		margin-bottom 0
		

.sect__cart
	.advantage
		min-height 125px
		&__title
			font-size 15px
			line-height 20px
			
	.advantages
		padding-bottom 40px
		.sect-title
			margin-bottom 50px
			

.additional-services
	padding-top 30px
	display none
	
.additional-service
	display flex
	align-items center
	justify-content space-between
	margin-bottom 15px
	margin-left -10px
	margin-right -10px
	&__col
		padding-left 10px
		padding-right 10px

		&:nth-child(1)
			flex 1
			padding-left 205px
		&:nth-child(2)
			width 100%
			max-width 200px
		&:nth-child(3)
			width 100%
			max-width 230px
			
	&:last-child
		margin-bottom 0
	&__price
		font-weight 700
		text-align center
		

.additional-service__option-label
	display inline-block
	margin-bottom 4px
	input
		display none
		&:checked
			+ span
				border-color $accent-color
				color $text-color
	span
		display block
		padding 8px 10px
		font-size 12px
		line-height 1
		transition all .17s ease-in-out
		border 1px solid $border-color
		color $light-text-color
		border-radius 6px
		&:hover
			cursor pointer
			border-color $accent-color