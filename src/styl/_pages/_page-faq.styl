.articles
	&-content
		order 2
		flex 1
		width calc(100% - 460px)
	&-aside
		order 1
		width 390px
		margin-right 70px
		
		.offer-blocks
			margin-top 30px
		
		.offer-block
			margin-bottom 30px
			&:last-child
				margin-bottom 0
				
		&__category
			margin-bottom 30px
			&:last-child
				margin-bottom 0
				
			.block-title
				margin-bottom 15px
		
				


.articles-aside__category-list
	background-color $basic-white-color
	border-radius 10px
	padding-top 25px
	padding-bottom 25px
	box-shadow 7px 6px 13px -10px rgba(28, 26, 26, 0.15), 8px 8px 30px -6px rgba(28, 26, 26, 0.1)
	ul
		a
			color $text-color
			font-size 17px
			text-decoration underline
			width 100%
			display block
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			&:hover
				color $accent-color
				
		li
			display flex
			justify-content flex-start
			align-items center
			flex-wrap wrap
			margin-bottom 20px
			padding-left 60px
			padding-right 25px
			position relative
			&:before
				pseudo()
				height 0
				width 2px
				background-color $accent-color
				left 0
				top 0
				position absolute
				transition height .17s ease-in-out
			
					
			&:last-child
				margin-bottom 0
			ul
				width 100%
				padding-left 20px
				padding-top 15px
				li
					padding 0
					&:before
						display none
				a
					display inline-block
					position relative
					padding-left 14px
					&:before
						pseudo()
						position absolute
						vertical-center()
						width 4px
						height 4px
						border-radius 50%
						background-color $text-color
						left 0
				
			span
				color $text-color
				font 17px $Reg
				font-weight 600
				
			&.has-sublist
				
				span
					display inline-block
					padding-right 18px
					position relative
					&:after
						pseudo()
						position absolute
						right 0
						vertical-center()
						width 9px
						margin-top 2px
						height 7px
						background url('../img/icons/svg/select-arrow.svg') no-repeat
						transition transform .17s ease-in-out	
						
					&:hover
						cursor pointer
						
					&.is-toggled
						&:after
							transform translateY(-50%) rotate(-180deg)
							
			&.is-current
				// span:after
				// 	transform translateY(-50%) rotate(-180deg)
					
				&:before
					height 100%
				ul.sublist
					display block
	
ul.sublist
	display none
	


				
		

			