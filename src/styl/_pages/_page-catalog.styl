.catalog-categories
	margin-bottom 70px
	padding-bottom 50px
	border-bottom 1px solid $border-color
	&__row
		margin-left -10px
		margin-right -10px
		
	
.catalog-category-link
	display flex
	flex-wrap nowrap
	align-items center
	justify-content flex-start
	min-height 140px
	background-color $basic-white-color
	box-shadow 7px 6px 13px -10px rgba(28, 26, 26, 0.15), 8px 8px 30px -6px rgba(28, 26, 26, 0.1)
	font 20px $Bold
	line-height 24px
	color $text-color
	padding 15px
	img
		display block
		flex none
		width 125px
		margin-right 20px
	&:hover
		color $accent-color
	&__wrapper
		width 25%
		padding-left 10px
		padding-right 10px
		margin-bottom 20px
		
.promo-slide-sm
	min-height 460px
	padding 40px 60px
	

.sect__catalog-categories
	.promo-block
		border-bottom 1px solid $border-color
		


.filter
	&__row
		margin-left -7.5px
		margin-right -7.5px
	&__col
		padding-left 7.5px
		padding-right 7.5px
	
	&-fields
		&__col
			flex 1
			display flex
			flex-wrap wrap
			justify-content flex-start
			margin-left -7.5px
			margin-right -7.5px
			
	&-price
		&__col
			width 295px
			
	&-group
		position relative
		&.is-opened
			.filter-group__dropdown
				margin-top 0
				opacity 1
				visibility visible
				pointer-events auto
			.filter-group__field
				border-color $accent-color
				&:after
					transform translateY(-50%) rotate(-180deg)
		&__field
			font 17px $Reg
			border-radius 10px
			display flex
			align-items center
			height 65px
			border 1px solid $border-color
			background-color $basic-white-color
			padding 10px 40px 10px 25px
			transition border-color .17s ease-in-out
			&:after
				pseudo()
				position absolute
				vertical-center()
				right 20px
				width 9px
				height 7px
				background url('../img/icons/svg/select-arrow.svg') 50% no-repeat / contain
				pointer-events none
				z-index 1
			&:hover
				border-color $accent-color
				cursor pointer
			span
				pointer-events none
		&__dropdown
			position absolute
			top 100%
			width 100%
			z-index 10
			padding-top 10px
			transition all .2s ease-in-out
			// margin-top 15px
			// opacity 0
			// visibility hidden
			// pointer-events none
			&--content
				background-color $basic-white-color
				border-radius 10px
				box-shadow 7px 6px 13px -10px rgba(28, 26, 26, 0.15), 8px 8px 30px -6px rgba(28, 26, 26, 0.1)
				padding 20px
				.form-checkbox__label
					margin-bottom 15px
					&:last-child
						margin-bottom 0
				&_select
					padding 14px 0
					li
						display block
						padding 6px 20px
						font 17px $Reg
						line-height 1
						&:hover
							background-color rgba($accent-color, .1)
							cursor pointer
		&__col
			padding-left 7.5px
			padding-right 7.5px
			
.filter-group__count
	color $light-text-color
	display inline-block
	margin-left 5px
	
.filter-group__field-counter
	flex-col-center()
	flex none
	margin-left 10px
	pointer-events none
	width 35px
	height 35px
	border-radius 50%
	background-color #E6E9EE
	&.is-hidden
		display none
		
.filter-group__checkbox
	height 25px
	padding-left 45px
	display flex
	align-items center
	
	&:before
		width 25px
		height 25px
		vertical-center()
		background-size 14px