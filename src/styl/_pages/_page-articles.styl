.article-card
	padding 25px
	margin-bottom 20px
	&:last-child
		margin-bottom 0
	&__preview
		display flex
		flex-wrap nowrap
		&-text
			margin-bottom 20px
		
	&__thumbnail
		padding-top 0
		border-radius 10px
		width 100%
		max-width 290px
		margin-right 30px
		
	&__title
		font 20px $Bold
		line-height 24px
		color $text-color
		margin-bottom 20px
		a
			color inherit
			&:hover
				color $accent-color
				
	&__content
		padding-top 20px
		
	&-gallery
		display flex
		flex-wrap wrap
		justify-content flex-start
		margin 20px -10px -20px -10px
		
		.fancy-link
			border-radius 10px
			overflow hidden
			padding-top 56.25%
		
		&__item
			padding-left 10px
			padding-right 10px
			margin-bottom 20px
			

.article-card__preview-content--header
	position relative
	padding-right 150px
	margin-bottom 20px
	
	.article-card__title
		margin-bottom 10px
	
	.likes
		position absolute
		top 0
		right 0
		

.article
	.article-card__preview-text
		margin-bottom 0
		

.article-user-feedback
	margin-top 30px
	display flex
	align-items center
	justify-content space-between
	
	
	.sharing
		display block
		max-width auto
		&-title
			display block
			margin-bottom 10px
			font-size 20px