.product-block
	margin-bottom 20px
	padding 15px 35px 15px 15px
	&__information
		display flex
		flex-wrap nowrap
		align-items center
		flex 2
	
		max-width 590px
		.product-articul
			margin-top 5px
	&__thumbnail
		width 180px
		height 130px
		padding 10px
		flex none
		flex-col-center()
		margin-right 25px
		
		img
			@extends .content-img
	&__title
		font 15px $Reg
		line-height 22px
		font-weight 600
		a
			color $text-color
			&:hover
				color $accent-color
	&__btn
		width 210px
		flex none
		.btn-add
			width 100%
			padding-right 4px
			

	&__prices
		flex 1
		text-align center
		
		.product-prices
			justify-content center
			font-size 15px
			span
				font-size inherit

			
	&:last-child
		margin-bottom 0
		
.product-articul
	color $articul-color 
		

.product-status
	color $available-color
	font 15px $Reg
	position relative
	padding-left 15px
	line-height 20px
	margin-bottom 5px
	&:before
		pseudo()
		position absolute
		vertical-center()
		width 5px
		height 5px
		left 0
		border-radius 50%
		background-color currentColor
		
	&.not-available
		color $error-color
		

.product-quantity
	width 130px
	height 45px
	border 1px solid $border-color
	border-radius 10px
	overflow hidden
	display flex
	flex-wrap nowrap
	&__btn
		width 40px
		flex-col-center()
		text-align center
		position relative
		svg
			position absolute
			position-center()
			svg()
			width 10px
			height 10px
			fill $light-text-color
			pointer-events none
		&:hover
			svg
				fill $text-color
	&__input
		display block
		width 50px
		text-align center
		padding-left 5px
		padding-right 5px
		font 15px $Reg
		font-weight 600
		color $text-color