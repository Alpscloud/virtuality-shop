.cabinet
	&-aside
		width 320px
		margin-right 70px
		
		.offer-block
			margin-top 20px
		
	&-nav
		background-color $basic-white-color
		box-shadow 7px 6px 13px -10px rgba(28, 26, 26, 0.15), 8px 8px 30px -6px rgba(28, 26, 26, 0.1)
		position relative
		padding-top 20px
		&__list
			position relative
			padding-bottom 20px
			&:before
				pseudo()
				position absolute
				left 25px
				right 25px
				height 1px 
				bottom 0
				background-color $border-color
				
		&__footer
			padding 15px 0 22px
				
		&__item
			display block
			margin-bottom 15px
			&:last-child
				margin-bottom 0
			
		&__link
			display flex
			justify-content flex-start
			flex-wrap nowrap
			align-items center
			color $text-color
			height 30px
			line-height 1
			padding-left 25px
			padding-right 25px
			position relative
			&:before
				pseudo()
				position absolute
				top 0
				left 0
				height 100%
				border-radius 40px
				background-color $accent-color
				width 2px
				transition opacity .17s ease-in-out
				opacity 0
			&--ic
				display inline-block
				flex none
				width 20px
				height 20px
				margin-right 16px
				svg
					svg()
					fill $text-color
					fill-rule evenodd 
					clip-rule evenodd
					
			&:hover
				color $accent-color
				svg
					fill $accent-color
					
			&.is-active
				color $accent-color
				svg
					fill $accent-color
					
				&:before
					opacity 1
		
		
			
		
	&-main
		flex 1
		&__title
			font 25px $Bold
			line-height 35px
			margin-bottom 30px
			
		.tab-controls
			margin-bottom 30px
			

.cabinet-search
	margin-bottom 30px
	
.cabinet__row
	flex-wrap nowrap
	

.cabinet-orders
	.cabinet-orders__controls
		margin-bottom 20px
		
	&__controls
		margin-bottom 20px
		.tab-controls__btn
			&:hover,
			&.is-active
				color $accent-color
			


.cabinet-order
	margin-bottom 20px
	padding 30px
	&:last-child
		margin-bottom 0
		
	&__information
		flex 1
		max-width 590px
		div
			margin-bottom 15px
			p
				margin-bottom 10px
				line-height 22px
				&:last-child
					margin-bottom 0
					
	&__details
		width 100%
		padding-top 30px
		display none
		
	&__title
		font-size 17px
		line-height 23px
		font-weight 700
		&--wrapper
			display flex
			flex-wrap nowrap
			align-items center
			justify-content flex-start
			margin-bottom 15px
			.cabinet-order-status
				margin-left 10px
			
	&__price
		text-align right
		font 17px $Reg
		line-height 23px
		margin-bottom 15px
		font-weight 700
		
	&__payment
		ul
			li
				display block
				margin-bottom 10px
				&:last-child
					margin-bottom 0
					
				span, b, strong
					color $accent-color
					
	&-status
		display inline-block
		padding 4px 10px
		background-color $basic-white-color
		border-radius 7px
		font 12px $Reg
		font-weight 600
		text-align center
		color $available-color
		border 1px solid currentColor
		
		&.status-active
			color $available-color
			
		&.status-delivery
			color $delivery-color
			
		&.status-receiving
			color $receiving-color
			
//Support	
.cabinet-support
	&__nav
		margin-bottom 30px
		white-space nowrap
		.btn
			margin-right 10px
			&:last-child
				margin-right 0
				

	&-chat
		&__counter
			padding 20px 35px
			font 17px $Reg
			font-weight 700
			&--status
				display flex
				flex-wrap nowrap
				align-items center
				.support-status
					margin-right 35px
		&__wrapper
			margin-bottom 20px
			&:last-child
				margin-bottom 0
				

.support-status
	display inline-block
	position relative
	padding-left 15px
	font-size 15px
	font-weight normal
	color $accent-color
	&:before
		pseudo()
		position absolute
		vertical-center()
		left 0
		width 5px
		height 5px
		border-radius 50%
		background-color currentColor
		
	&-send
		color $accent-color
	&-open
		color $available-color
		
	&-close
		color $error-color
		

.cabinet-support-chat
	height 100%
	max-height 410px
	padding-left 35px
	padding-right 35px
	.os-content
		padding-right 35px !important
	.os-scrollbar
		right 15px
	&__phrase
		display flex
		justify-content flex-end
		align-items flex-end
		margin-bottom 20px
		&:last-child
			margin-bottom 0
		&:nth-child(even)
			justify-content flex-start
			.cabinet-support-chat__phrase
				&--avatar
					margin-left 0
					margin-right 20px
				&--text
					border-radius 20px 20px 20px 2px
					background-color $color-bg
					color $text-color
		&--text
			font 17px $Reg
			line-height 27px
			padding 25px
			background-color $basic-black-color
			color $basic-white-color
			width 100%
			max-width 850px
			border-radius 20px 20px 2px 20px
			p
				margin-bottom 10px
				&:last-child
					margin-bottom 0
		&--avatar
			flex none
			border-radius 50%
			margin-left 20px
			width 75px
			height 75px
			
	&__form
		padding-left 35px
		padding-right 35px
		margin-top 20px
		
		textarea
			min-height 130px
			padding-right 200px
			
	&__block
		padding-top 35px
		padding-bottom 35px
		border-top 1px solid $border-color
		display none
		

.cabinet-support-chat__form--file
	display none
	margin-top 10px
	color $articul-color
	&.is-visible
		display block
	
	span
		display inline-block
		vertical-align middle
		
	.btn-close
		width 10px
		height 10px
		margin-left 10px
		vertical-align middle
		svg
			width 10px
			height 10px
			

.cabinet-support__form
	padding 35px
	
// Stocks
.cabinet-stock
	margin-bottom 20px
	position relative
	.btn-follow
		position absolute
		z-index 3
		top 15px
		right 15px
	&:last-child
		margin-bottom 0
		
	.promo-slide
		min-height 300px
		&__title
			font-size 33px
			line-height 43px
			margin-bottom 30px
	
		.company-name
			margin-bottom 15px
			
		&-color
			padding-bottom 	80px
			.promo-slide__img
				width 600px
				height 600px
				right 20px
				img
					width 400px
					top 70px
			.promo-slide__bg
				&:after
					width 205px
					height 205px
					left 70px
					bottom -160px
				&:before
					width 120px
					height 120px
					top -80px
					left -50px
				

.cabinet-suggestions__info
	margin-bottom 30px
	&--title
		font-weight 700
		color $accent-color
		margin-bottom 10px
		a
			color inherit
			&:hover
				color $text-color