.ic-block
	display inline-block
	position relative
	padding-left 22px
	&:before
		pseudo()
		position absolute
		vertical-center()
		left 0
		width 15px
		height 15px
		background-repeat no-repeat
		background-size contain
		background-position 50%
		
	&__worktime
		&:before
			background-image url('../img/icons/svg/clock.svg')
	&__phone
		&:before
			background-image url('../img/icons/svg/phone.svg')
			

.phone-link
	color $text-color
	white-space nowrap
	&:hover
		color $accent-color
		

// Timer
.timer
	display flex
	align-items center
	border 1px solid #E64646
	background-color $basic-white-color
	height 74px
	&-items
		display flex
		flex-wrap nowrap
		justify-content space-evenly
		width 100%
		padding-left 20px
		padding-right 20px
	&-item
		text-align center
		span
			display block
		&__value
			font 20px $Bold
			line-height 23px
			color #E64646
			letter-spacing 5px
			margin-bottom 1px
		&__label
			font 15px $Reg
			color $text-color
			line-height 20px
		&__divider
			font 20px $Bold
			color $text-color
			display block
			margin 0 10px
	&-title
		margin-bottom 4px
		font 25px $Bold
		line-height 35px
	&-wrapper
		margin-bottom 10px
		
// tab conrols
.tab-controls
	white-space nowrap
	overflow-x auto
	&__btn
		display inline-block
		margin-right 10px
		vertical-align top
		border 1px solid $border-color
		text-align center
		font 12px $Bold
		padding 18px 20px
		text-transform uppercase
		letter-spacing 0.1em
		color $light-text-color
		background-color $basic-white-color
		&:hover,
		&.is-active
			color $text-color
			border-color $accent-color
		&:last-child
			margin-right 0
			
// Rating
.rating
	display flex
	align-items center
	justify-content flex-start
	&-value
		display inline-block
		margin-left 10px
		font 15px $Reg
	
	&-stars
		display flex
		flex-wrap nowrap
		width 100px
		justify-content space-between
	&-0
		.rating-star
			background-image url('../img/icons/svg/rating.svg')
	&-1
		.rating-star:not(:first-child)
			background-image url('../img/icons/svg/rating.svg')
	&-2
		.rating-star
			&:nth-child(3),
			&:nth-child(4),
			&:nth-child(5)
				background-image url('../img/icons/svg/rating.svg')
	&-3
		.rating-star
			&:nth-child(4),
			&:nth-child(5)
				background-image url('../img/icons/svg/rating.svg')
	&-4
		.rating-star
			&:nth-child(5)
				background-image url('../img/icons/svg/rating.svg')
	
			
	&-star
		display inline-block
		width 17px
		height 17px
		background url('../img/icons/svg/rating-fill.svg') 50% no-repeat / contain
		