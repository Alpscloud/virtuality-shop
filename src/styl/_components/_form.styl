input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)




.form
	&-input
		display block
		width 100%
		padding 19px 25px
		text-align left
		background-color $basic-white-color
		border 1px solid $light-border-color
		font 17px $Reg
		color $text-color
		border-radius 7px
		&:hover,
		&:focus
			border-color $accent-color
		&::-webkit-input-placeholder
			font 17px $Reg
			color $light-text-color
		&::-moz-placeholder
			font 17px $Reg
			color $light-text-color
		&:-moz-placeholder
			font 17px $Reg
			color $light-text-color
		&:-ms-input-placeholder
			font 17px $Reg
			color $light-text-color
		
			
	&-group
		margin-bottom 15px
		text-align left
		position relative
		&:last-child
			margin-bottom 0
			
		&.text-center
			text-align center
			.link
				font-size 15px
			
		&__label
			display inline-block
			margin-bottom 5px
			
		&__error
			display none
			margin-top 10px
			font 12px $Reg
			color $error-color
			
		&__password
			.form-input
				padding-right 50px
				
			.btn-password
				position absolute
				right 20px
				z-index 1
				top 24px
			
		&__checkbox
			margin 25px 0
			&:first-child
				margin-top 0
			
		&.is-error
			.form-group__error
				display block
			.form-input
				border-color $error-color
			
	&-textarea
		min-height 150px
	



.form
	&-checkbox
		display inline-block
		position relative
		padding-left 50px
		font 15px $Reg
		line-height 22px
		color $text-color
		a
			color $accent-color
			border-bottom 1px solid
			&:hover
				color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			top 3px
			border-radius 7px
			width 35px
			height 35px
			border 1px solid $light-border-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 17px
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							background-color $accent-color
							border-color $accent-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block
							


.form-rating
	display flex
	flex-wrap nowrap
	align-items center
	justify-content flex-start
	&__label
		font 17px $Reg
		display inline-block
		margin-right 15px
		
	&__stars
		position relative
		height 23px
		width 120px
		background url('../img/icons/svg/rating.svg') repeat-x / 24px 23px
		
	&__star
		position absolute
		top 0
		left 0
		height 100%
		background-repeat repeat-x
		background-size 24px 23px
		&:nth-of-type(1)
			z-index 5
			width 20%
		&:nth-of-type(2)
			z-index 4
			width 40%
		&:nth-of-type(3)
			z-index 3
			width 60%
		&:nth-of-type(4)
			z-index 2
			width 80%
		&:nth-of-type(5)
			z-index 1
			width 100%
			
		&:hover
			background-image url('../img/icons/svg/rating-fill.svg')
			
	&__input
		&:checked + .form-rating__star
			background-image url('../img/icons/svg/rating-fill.svg')
			
		
		

