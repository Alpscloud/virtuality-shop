.search
	&-wrapper
		flex 1
		margin-left 20px
		margin-right 30px
	&-form
		width 100%
		display block
		&__group
			position relative
			
		&__input
			width 100%
			display block
			height 45px
			background-color $basic-white-color
			border 1px solid $border-color
			padding 12px 45px 12px 15px
			font 16px $Reg
			color $text-color
			&:hover,
			&:focus
				border-color $accent-color
			&::-webkit-input-placeholder
				font 15px $Reg
				color $light-text-color
			&::-moz-placeholder
				font 15px $Reg
				color $light-text-color
			&:-moz-placeholder
				font 15px $Reg
				color $light-text-color
			&:-ms-input-placeholder
				font 15px $Reg
				color $light-text-color
		&__btn
			position absolute
			vertical-center()
			right 6px
			z-index 1
			width 37px
			height 37px
			background-color $accent-color
			border-radius 6px
			svg
				svg()
				position absolute
				position-center()
				fill $basic-white-color
				width 22px
				height 22px
			&:hover
				background-color $dark-accent-color
				