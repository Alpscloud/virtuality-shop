// Loader
.preloader
	display block
	position absolute
	position-center()
	z-index 1001
	perspective 500px
	span
		display block
		width 40px
		height 40px
		background-color $basic-white-color
		animation rotating 2s linear infinite
		
	&__wrapper
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 1000
	&__section
		position fixed
		top 0
		width 51%
		height 100%
		background-color $text-color
		z-index 1000
		transform translateX(0)
		&--left
			left 0
		&--right
			right 0


			
@keyframes rotating
	100%
		transform rotateY(360deg)
	

.is-loaded

	.preloader
		opacity 0
		transition all 0.3s ease-out
		&__wrapper
			visibility hidden
			transition all 0.3s 1s ease-out
		&__section
			&--left
				transform translateY(-100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
			&--right
				transform translateY(100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
